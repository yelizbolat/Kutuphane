@model IEnumerable<Kutuphane.Models.Kategori>

@{
    ViewData["Title"] = "Kategoriler";
}

<h1>Kategoriler</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.KategoriAdi)</th>
            <th>@Html.DisplayNameFor(model => model.Aciklama)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KategoriAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.Aciklama)</td>
                <td>
                    <a asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                    <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 
<div>    <a asp-action="Ekle" class="btn btn-primary">Yeni Kategori Ekle</a></div>