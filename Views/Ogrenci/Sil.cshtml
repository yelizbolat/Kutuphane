@model Ogrenci

<h2>Öğrenci Sil</h2>
<p>@Model.OgrenciAdi @Model.OgrenciSoyadi adlı öğrenciyi silmek istediğinize emin misiniz?</p>

<form asp-action="SilOnayla" method="post" asp-controller="Ogrenci">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>