@model Kutuphane.Models.Kitap

@{
    ViewData["Title"] = "Kitap Sil";
}

<h1>Kitap Sil</h1>

<h3>Bu kitabı silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KitapAdi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KitapAdi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Yazar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Yazar)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Yayinevi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Yayinevi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategori)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kategori.KategoriAdi)
        </dd>
    </dl>

    <form asp-action="Sil">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div> 